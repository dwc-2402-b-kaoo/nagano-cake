<% if flash[:alert] %>
  <div class="alert alert-success">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="container mt-3">
  <div class="row">
    <h4 class="text-black">
    <%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集
    </h4>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    <%#= render 'layouts/errors', obj: @user %>
    <div class="row mt-3">
      <div class="col">
        <table class="table table-borderless">
          <tr>
            <th class="col-2">会員ID</th>
            <td><%= @customer.id %></td>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :氏名 %></th>
              <td>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :フリガナ %></th>
              <td>
                <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
                <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :郵便番号 %></th>
              <td>
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :住所 %></th>
              <td>
                <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :電話番号 %></th>
              <td>
                <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :メールアドレス %></th>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th>会員ステータス</th>
              <td>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :is_active, true, class: "form-check-input"  %>
                  <%= f.label :"有効", class: "form-check-label mr-3" %>
                </div>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :is_active, false, class: "form-check-input" %>
                  <%= f.label :"退会", class: "form-check-label" %>
                </div>
              </td>
            </div>
          </tr>

          <tr>
            <div>
              <th></th>
              <td>
                <%= f.submit "変更を保存", class: "btn btn-success" %>
              </td>
            </div>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
</div>