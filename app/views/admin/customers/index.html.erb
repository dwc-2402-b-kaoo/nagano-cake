<div class="container mt-3">
  <div class="row">
    <h4 class="text-black">会員一覧</h4>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mt-3 mb-5">
      <table class="table text-center mb-5">
        <thead class="table-secondary">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
    
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to "#{customer.last_name} #{customer.first_name}", admin_customer_path(customer.id) %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_active == true %>
                  <span class="text-success font-weight-bold align-middle">有効</span>
                <% else %>
                  <span class="text-secondary font-weight-bold align-middle">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @customers %>
  </div>
</div>