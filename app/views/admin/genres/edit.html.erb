<div class="container mt-3">
  <div class="row">
      <h4 class="text-black">ジャンル編集</h4>
  </div>

<!--ジャンル編集失敗フラッシュメッセージ-->
  <% if flash[:notice].present? && flash[:notice] == "ジャンルの更新に失敗しました。" %>
    <div class="mt-3">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <div>  
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました。
      <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  </div>

<!--ジャンル編集ボックス-->
  <div class="row form-group justify-content-center">
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.label "ジャンル名", class: "col-form-label" %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control name" %>
        </div>
        <div class="col-sm-2">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>