<!--ジャンル編集失敗フラッシュメッセージ-->
<% if flash[:notice].present? && flash[:notice] == "編集内容を確認してください。" %>
  <div class="alert alert-danger">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container mt-3">
  <div class="row">
      <h4 class="text-black">ジャンル編集</h4>
  </div>

<!--ジャンル編集ボックス-->
  <div class="row form-group justify-content-center">
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.label "ジャンル名", class: "col-form-label" %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :name, placeholder: "ジャンル名", class: "form-control name" %>
        </div>
        <div class="col-sm-2">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>