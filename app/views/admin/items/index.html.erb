<div class="container mt-3">
  <div class="row">
      <h4 class="text-black">商品一覧</h4>
  </div>

<!--商品登録画面へ遷移するボタン-->
  <div class="row justify-content-center">
    <div class="col-sm-10 px-sm-0 text-right mb-2">
      <%= link_to new_admin_item_path, class:"btn btn--circle btn--circle-c btn--shadow" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>

<!--商品一覧-->
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table text-center mb-5">
          <thead class="table-secondary">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
            <th>ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td class="align-middle"><%= item.id %></td>
              <td class="align-middle"><%= link_to admin_item_path(item.id) do %>
                <u><%= item.name %></u>
              </td>
              <% end %>
              <td class="align-middle"><%= item.price %></td>
              <td class="align-middle"><%= item.genre.name %></td>
              <td class="align-middle">
                <% if item.is_active == true %>
                  <span class="text-success font-weight-bold align-middle">販売中</span>
                <% else %>
                  <span class="text-secondary font-weight-bold align-middle">販売停止中</span>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
        </table>

<!--ページネーション-->
      <%= paginate @items %>
    </div>
  </div>
</div>