<!--商品追加・編集成功フラッシュメッセージ-->
<% if flash[:notice].present? && flash[:notice] == "商品を編集しました。" %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:notice].present? && flash[:notice] == "商品を追加しました。" %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container mt-3 mb-3">
  <div class="row">
    <h4 class="text-black">商品詳細</h4>
  </div>

<!--商品画像-->
  <div class="row mt-3 mb-3 justify-content-center">
    <div class="col-12 col-sm-6 col-md-4">
      <%= image_tag @item.get_item_image(50,50), size: "250x250", style: "max-width: 100%;" %>
    </div>
<!--商品情報-->
    <div class="col-12 col-sm-9 col-md-7">
      <table class="table table-borderless">
        <tbody>
            <tr>
              <td class="col-4">商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td class="col-4">商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td class="col-4">ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td class="col-4">税込価格<br>(税抜価格)</td>
              <td><%= @item.with_tax_price.to_s(:dalimited) %> (<%= @item.price %>円)</td>
            </tr>
            <tr>
              <td class="col-4">販売ステータス</td>
              <td>
              <% if @item.is_active == true %>
              <p class="text-success">販売中</p>
              <% else %>
              <p class="text-danger">販売停止中</p>
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  <div class="text-center mb-5">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
  </div>
</div>