<div class="container">
  <div class="row mt-3 col-sm-10 px-sm-0 mx-auto">
    <h4 class="text-black">注文履歴一覧</h4>
  </div>
  
  <% if @orders.present? %>
    <div class="row mt-3 col-sm-10 px-sm-0 mx-auto">
      <table class="table text-center">
        <thead class="table-secondary">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at, admin_order_path(order) %></td>
              <td><%= order.customer.name %></td>
              <td><%= order.cart_items.sum(:amount) %><td>
              <td><%= order.order_details.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="row mt-3 col-sm-10 px-sm-0 mx-auto">
      <p>注文情報がありません。</p>
    </div>
  <% end %>
</div>