<div class="container">
  <div class="row">
    <h2 class="text-black p-2" style="text-decoration: underline; text-decoration-color: #795548;">
      配送先情報の編集
    </h2> <!-- 配送先情報の編集タイトル -->
  </div>

  <div class="row mt-3">
    <div class="col">
      <%= form_with model: @address, url: address_path(@address), method: :patch do |f| %> <!-- アドレスの更新フォーム -->
        <table class="table table-borderless">
          <tr>
            <div class="field">
              <th><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></th> <!-- 郵便番号ラベル -->
              <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %></td> <!-- 郵便番号入力 -->
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :address, "住所" %></th> <!-- 住所ラベル -->
              <td><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 500px;" %></td> <!-- 住所入力 -->
            </div>
          </tr>

          <tr>
            <div>
              <th><%= f.label :name, "宛名" %></th>  <!-- 宛名ラベル -->
              <td><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子" %></td> <!-- 宛名入力 -->
            </div>
          </tr>

          <tr>
            <div>
              <th></th>
              <td><%= f.submit "更新", class: "btn btn-info" %></td> <!-- 更新ボタン -->
            </div>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
