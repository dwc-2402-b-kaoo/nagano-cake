<h3>ショッピングカート</h3>

<%= link_to "カートを空にする", cart_item_destroy_al_path, method: :delete, class:"btn btn-danger" %>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
    <% if current_customer.cart_items.present? %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td></td>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to "削除する", cart_item_path(cart_items.id), method: :delete, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %>


<table>
  <tr>
    <th>合計金額</th>
    <td><% @total +=  cart_item.subtotal %></td>
  </tr>
</table>

<%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>