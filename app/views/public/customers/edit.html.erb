<div class="row">
  <h4 class="text-black">会員情報編集</h4>
</div>

    <%= form_with model: @customer, url: customers_information_path(@customer), method: :patch do |f| %>
      <%#= render 'layouts/errors', obj: @user %>
      <div class="field">
        <%= f.label :姓 %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :名 %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :姓カナ %><br />
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>

      <div class="field">
        <%= f.label :名カナ %><br />
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>

      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>

      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <div class="field">
        <%= f.label :電話番号 %><br />
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

    <%= f.submit "変更を保存", class: "btn btn-success" %>
    <% end %>
    
    <%#= link_to "退会する", customers_unsubscribe_path, class:"ml-5 btn btn-danger" %>