<% if flash[:alert] %>
  <div class="alert alert-success">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="container mt-3">
  <div class="row">
    <h4 class="text-black p-2" style="text-decoration: underline; text-decoration-color: #795548;">会員情報編集</h4>
  </div>

  <%= form_with model: @customer, url: customers_information_path(@customer), method: :patch do |f| %>
    <%#= render 'layouts/errors', obj: @user %>
    <!--<%# if @customer.errors.any? %>-->
    <!--  <div class="alert alert-danger">-->
    <!--    <ul>-->
    <!--      <%# @customer.errors.full_messages.each do |message| %>-->
    <!--        <li><%#= message %></li>-->
    <!--      <%# end %>-->
    <!--    </ul>-->
    <!--  </div>-->
    <!--<%# end %>-->

    <div class="row mt-3">
      <div class="col">
        <table class="table table-borderless">
          <tr>
            <div class="field">
              <th><%= f.label :氏名 %></th>
              <td>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
              </td>
            </div>
          </tr>


          <tr>
            <div class="field">
              <th><%= f.label :フリガナ %></th>
              <td>
                <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
                <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :郵便番号 %></th>
              <td>
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :住所 %></th>
              <td>
                <%= f.text_field :address, autofocus: true, autocomplete: "address", style: "width: 500px;" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :電話番号 %></th>
              <td>
                <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
              </td>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :メールアドレス %></th>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </td>
            </div>
          </tr>

          <tr>
            <div>
              <th></th>
              <td>
                <%= f.submit "変更を保存", class: "btn btn-success" %>
                <%= link_to "退会する", customers_unsubscribe_path, class:"ml-5 btn btn-danger" %>
              </td>
            </div>
          </tr>

        </table>
      </div>
    </div>
  <% end %>
</div>

