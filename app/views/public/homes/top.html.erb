<% if flash[:notice] %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>

<div style="background: url('<%= asset_path('top_img.jpg') %>') center center no-repeat; background-size: cover; text-align: center; height: 80vh; position: relative; overflow-x: hidden;">
  <div class='container px-0'>
    <div class='row'>
      <div class='col-md-3'>
        <!-- ジャンルのサイドバー -->
        <div style="background-color: white;">
          <%= render 'public/items/sidebar', genres: @genres %>
        </div>

<div style="background: url('<%= asset_path('top_img.jpg') %>') center center no-repeat; background-size: cover; text-align: center; height: 80vh; position: relative;">
  <div class="container">
    <div class="row">
      <div class='mx-auto t-2 col-11 col-sm-10 col-lg-8 col-xl-6'>
        <p>
          ようこそ、ながのCAKEへ！<br>
          このサイトは、ケーキ販売のECサイトになります。<br>
          会員でない方も商品の説明はできますが、<br>
          購入には会員登録が必要になります。
        </p>

      </div>
      <div class='col-md-8'>
        <div class="container-fluid bg-cover text-white d-flex justify-content-center align-items-center" style="background-image: url('/assets/about_img.jpg'); background-position: center center; background-repeat: no-repeat; background-size: cover; text-align: center; height: 40vh;">
          <div class="plate mx-auto mb-5" id="cork">
            <div>
              ようこそ、ながのCAKEへ！<br>
              このサイトは、ケーキ販売のECサイトになります。<br>
              会員でない方も商品の説明はできますが、<br>
              購入には会員登録が必要になります。
            </div>
          </div>
        </div>
        <!-- 新着商品 -->
        <div class='row'>
          <div class='col-md-3'>
            <h3>新着商品</h3>
          </div>
          <div class="row">
            <% @items.each do |item| %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card bg-transparent border-0" style="width: 100%;">
                  <%= link_to item_path(item) do %>
                    <%= image_tag item.get_item_image(50,50), size: "200x200", style: "max-width: 100%;" %>
                  <% end %>
                  <div class="card-body">
                    <p class="item-details item-name card-text"><%= item.name %></p>
                    <% if item.is_active == true %>
                      <p class="item-details card-text">¥ <%= item.with_tax_price.to_s(:delimited) %> (税込)</p>
                    <% else %>
                      <p class="text-danger font-weight-bold card-text">販売停止中</p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div style="position: fixed; bottom: 120px; right: 30px;">
      <%= link_to 'すべての商品を見る＞', items_path, class: 'btn btn-outline-light' %>
    </div>
  </div>
</div>

