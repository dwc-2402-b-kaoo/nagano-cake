<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-10">
      <h2 class="mb-4 bg-info text-dark p-2 d-inline-block">新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

          <div class="field row">
            <div class="col">
              <%= f.label :last_name, "名前" %>
            </div>
            <div class="col text-right"> <!-- 右寄せするためのクラスを追加 -->
              <%= f.label :last_name, "(姓)"%>
            </div>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: "col" %>
              <%= f.label :first_name, "(名)" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子", class: "col" %>
          </div>

        <div class="field">
          <%= f.label :last_name_kana, "フリガナ" %>
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ" %>
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
        </div><br>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exanple.com" %>
        </div><br>

        <div class="field">
          <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
        </div><br>

        <div class="field">
          <%= f.label :postal_code, "住所" %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div><br>

        <div class="field">
          <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000" %>
        </div><br>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete:"encrypted_password" %>
        </div><br>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autoforcus: true, autocomplete: "current-password" %>
        </div><br>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-outline-info btn-lg" %>
        </div>
      <% end %>
      <br>
      <h4>既に登録済みの方</h4>
      <p><%= link_to "こちら", customer_session_path %>&emsp;からログインしてください。</p>
    </div>
  </div>
</div>