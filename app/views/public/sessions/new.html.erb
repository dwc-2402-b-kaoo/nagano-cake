<!--レイアウト未設定-->
<div style="margin: 0 auto; width: 50%;">
  <h3 class="mb-4">ログイン</h3>
    <h3 class="mb-4">会員の方はこちらからログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@exanple.com" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-outline-info btn-sm" %>
        </div>
      <% end %>
      <br>
      <h4>会員登録がお済でない方</h4>
      <p><%= link_to "こちら", new_customer_registration_path %>&emsp;から新規登録を行ってください。</p>
</div>